@model UsersViewModel
@{
    ViewData["Title"] = "Delete";
   
}

<h1 class="text-danger">Are you sure you want to delete this user</h1>


<br />
<br />

<form asp-action="Delete">

    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label"></label>
        <input asp-for="@Model.Name" class="form-control" readonly />


    </div>

    <div class="form-group">
        <label asp-for="@Model.PhoneNumber" class="col-form-label"></label>
        <input asp-for="@Model.PhoneNumber" class="form-control" readonly />


    </div>

    <div class="form-group">
        <label asp-for="@Model.Email" class="col-form-label"></label>
        <input asp-for="@Model.Email" class="form-control" readonly />


    </div>

    <div class="form-group">
        <label asp-for="@Model.Id" class="col-form-label"></label>
        <input asp-for="@Model.Id" class="form-control" readonly />


    </div>

    <div class="form-group">
        <label asp-for="@Model.DateOfCreation" class="col-form-label"></label>
        <input asp-for="@Model.DateOfCreation" class="form-control" readonly />


    </div>

    <div class="form-group">
        <label asp-for="@Model.Roles" class="col-form-label"></label>
        <input asp-for="@Model.Roles" class="form-control" readonly />


    </div>
    <div>
        <input type="submit" value="Delete" class="btn btn-success" />
       
    </div>
    <br />
    <div>
        <a asp-action="Index" class="btn btn-info">BackToList</a>
    </div>

</form>

