@model IEnumerable< EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<br />

<h1>ALL Employees</h1>
<h2 id="message1">@TempData["created"]</h2>

@*Scripts for fading out any tag with id*@
<script>
setTimeout(fade_out, 5000);

function fade_out() {
        $("#message1").fadeOut().empty();
}
</script>

<br />
<br />

<form asp-action="Index">
    <div class="form-group">

        <label class="col-form-label">Search by name</label>
        <input placeholder="Search by name" name="SearchValue" class="form-control" />

    </div>
    <div class="form-group">

        <input type="submit" class="btn btn-success" />
    </div>
</form>

<br />

<div>
    <a asp-action="Create" class="btn btn-success">Create New Employee</a>
</div>

<br />

<div>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Image
                </th>
                <th>
                    Salary
                </th>
                <th>
                    DateOfHiring
                </th>
                <th>
                    DepartmentId
                </th>
                <th>
                    Details
                </th>
                <th>
                    Update
                </th>
                <th>
                    
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor((Model)=>item.Name)
                    </td>
                    <td>
                        <img src="images/@item.ImageUrl" alt="EmployeeImage" width="50" height="50">
                       
                    </td>
                    <td>
                        @Html.DisplayFor((Model)=>item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor((Model)=>item.HiringDate)
                    </td>
                    <td>
                        @Html.DisplayFor((Model)=>item.DepartmentId)
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-danger" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a asp-action="Update" class="btn btn-warning" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-info" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


    
