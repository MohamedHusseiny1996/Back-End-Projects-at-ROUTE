@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
}

<br />

<h1>ALL Users</h1>

<br />
<br />

<form asp-action="Index">
    <div class="form-group">

        <label class="col-form-label">Search by Email</label>
        <input placeholder="Search by name" name="SearchValue" class="form-control" />

    </div>
    <div class="form-group">

        <input type="submit" class="btn btn-success" />
    </div>
</form>

<br />



<br />

<div>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
               
                <th>
                    Details
                </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(d=>item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(d=>item.RoleName)
                    </td>
                    
                    <td>
                        <a asp-action="Details" class="btn btn-danger" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a asp-action="Update" class="btn btn-warning" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-info" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

