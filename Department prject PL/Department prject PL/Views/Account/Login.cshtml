@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<h1>Login</h1>


<div class="align-content-center text-sm-center text-danger" asp-validation-summary="All"> </div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" method="post">
			
			<input class="text email" type="email" asp-for="@Model.Email" placeholder="Email" required="">
			<span asp-validation-for="@Model.Email"></span>
			<input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
			<span asp-validation-for="@Model.Password"></span>
			
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" class="checkbox" asp-for="@Model.RememberMe" >
					
					<span>Remeber me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
		<a asp-action="ForgetPassword" style="color:white; display:block;  text-align:center"> Forget Password </a>
	</div>
</div>

@section ValidationScripts
	{
	<partial name="_ValidationScriptsPartial">   </partial>
}