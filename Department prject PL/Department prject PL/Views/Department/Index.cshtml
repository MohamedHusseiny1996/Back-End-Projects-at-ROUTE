@model IEnumerable<DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
}

<br />

    <h1>ALL Departments</h1>

<br />
<br />

    <form asp-action="Index" >
      <div class="form-group">
       
          <label class="col-form-label">Search by name</label>
         <input  placeholder="Search by name" name="SearchValue" class="form-control" />
        
      </div>
    <div class="form-group">
        
        <input type="submit" class="btn btn-success" />
    </div>
    </form>

<br />

<div>
    <a asp-action="Create" class="btn btn-success">Create New Department</a>
</div>

<br />

<div >
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Code
                </th>
                <th>
                    Name
                </th>
                <th>
                    DateOfCreation
                </th>
                <th>
                    Details
                </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(d=>item.code)
                    </td>
                    <td>
                        @Html.DisplayFor(d=>item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(d=>item.CreatedDate)
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-danger" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a asp-action="Update" class="btn btn-warning" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-info" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

