@model DepartmentViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<br />
<br />

<form asp-action="Update">

    <div class="form-group">
        <label asp-for="@Model.code" class="col-form-label"></label>
        <input asp-for="@Model.code" class="form-control" readonly/>
        

    </div>

    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label"></label>
        <input asp-for="@Model.Name" class="form-control" readonly />
       

    </div>

    <div class="form-group">
        <label asp-for="@Model.CreatedDate" class="col-form-label"></label>
        <input asp-for="@Model.CreatedDate" class="form-control" readonly />
       

    </div>


    <div>
       
        <a class="btn btn-success" asp-action="Update" asp-route-id="@Model.Id" >Edit</a>
    </div>
    <br />
    <div>
        <a asp-action="Index" class="btn btn-info">BackToList</a>
    </div>

</form>

